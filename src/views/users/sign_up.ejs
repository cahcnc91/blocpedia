<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container p-8 mt-12">
      <% include ../static/partials/messages.ejs %>

      <div className="w-full text-center">
        <h2 class="h2 pb-4 text-center">Welcome to Cookopedia</h2>
      </div>
      <form class="w-full flex justify-center" action="/users" method="post">
        <div class="w-3/6 flex flex-column">
          <div class="form-group pb-2">
            <label for="email">Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              aria-describedby="emailHelp"
              placeholder="Enter email"
            />
          </div>

          <div class="form-group pb-2">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              aria-describedby="passwordHelp"
              placeholder="Enter password"
            />
          </div>

          <div class="form-group pb-2">
            <label for="passwordConfirmation">Password confirmation</label>
            <input
              type="password"
              class="form-control"
              name="passwordConfirmation"
              aria-describedby="passwordHelp"
              placeholder="Enter password confirmation"
            />
          </div>

          <button type="submit" class="btn btn-primary m-0">Sign up</button>
        </div>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
