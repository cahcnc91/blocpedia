<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main>

      <section  class="container show-wiki-container">
          <div class="panel panel-default panel-wikis-show">
              <h1 class="panel-heading"><%= wiki.title %></h1>
              <p><%= wiki.userId %></p>
              <p class="panel-body"><%- wiki.body %></p>
          </div>

          <% if (currentUser && wiki.private === false) { %>
            <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
          <% } else if (currentUser && wiki.private === true && wiki.userId != currentUser.id) { %>
            <p>This is a private wiki, you are not allowed to edit without owner's permission.</p>
          <% } else if(currentUser && wiki.private === true && wiki.userId === currentUser.id && currentUser.role === "premium") { %>
            <h2>This is a Private Wiki by you</h2>
            <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
          <% } %>




      </section>
      
       

        
        
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>