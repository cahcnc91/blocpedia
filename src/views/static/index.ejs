<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <% include ./partials/navbar.ejs %> <% include
    ../static/partials/messages.ejs %>

    <main class="container p-8 mt-16">
      <!-- Jumbotron Header -->
      <header class="page-header small text-center">
        <h1 class="display-4 ">Wikipedia: make your own wikis</h1>
      </header>

      <form 
        class="w-full flex flex-column justify-center"
        action="/wikis/searchstring"
        method="GET"
      >
        <div class="input-group md-form form-sm form-2 pl-0">
          <input
            class="form-control my-0 py-1 red-border"
            type="text"
            name="string"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="input-group-append" type="submit">
            <span class="input-group-text red lighten-3" id="basic-text1"
              ><i class="fas fa-search text-grey" aria-hidden="true"></i
            ></span>
              </button>
        </div>
      </div>
      <section class="row justify-content-center">
        <div class="col-lg-3 text-center">
          <a href="/wikis" class="btn btn-rounded btn-secondary btn-lg">See Wikis</a>
        </div>
      </section>
      <section class="row justify-content-center plans">
        <div class="col-lg-3 text-center">
          <h5 class="card-title">
            Create as many public <br />wikis as you want!
          </h5>
          <p class="card-text"><b>FREE PLAN</b><br />$0</p>
          <a href="/users/sign_up" class="btn btn-rounded btn-secondary btn-lg">Sign up</a>
        </div>

        <div class="col-lg-3 text-center">
          <h5 class="card-title">
            Create private wikis, <br />
            unlimited amount
          </h5>
          <p class="card-text"><b>PREMIUM PLAN</b><br />$10/month</p>
          <a href="/users/upgrade" class="btn btn-rounded btn-info btn-lg">Sign up</a>
        </div>
      </section>
    </main>

    <% include ./partials/baseScripts.ejs %>
  </body>
</html>
