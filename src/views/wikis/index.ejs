<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="main-index-wikis">

        <% include ../static/partials/messages.ejs %>
        <h1>Wikis</h1>
        <table class="table table-bordered table-hover table-index-wikis">
    
            <thead>
                <tr>
                  <th class="table-wikis-head">Wikis</th>
                  <th class="table-wikis-head">by user</th>
                </tr>
              </thead>
              <tbody>
                <% wikis.forEach((wiki) => { %>
                  <tr>
                    <td>
                      <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
                    </td>
                    <td>
                        <p><%= wiki.userId %></p>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
        </table>

        <% if(currentUser) { %>
          <a href="wikis/new" class="btn btn-primary btn-lg">New wiki</a>
        <% } %>

    </main>
    
  </body>
</html>